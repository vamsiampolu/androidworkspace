<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:id="@+id/txt_user"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="22sp"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:text="myMonster"
            />
    <TextView android:id="@+id/txt_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:layout_alignParentTop="true"
              android:layout_alignParentRight="true"
              android:text="15 minutes ago"
            />
    <TextView android:id="@+id/txt_tweet"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:autoLink="all"
              android:layout_alignParentLeft="true"
              android:layout_alignParentRight="true"
              android:layout_marginTop="35dp"
              android:layout_below="@id/txt_user"
              android:text="I just ate all your cookies"
            />
    <!-- android:autolink can be set to web|email|phone etc-->
</RelativeLayout>