<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/orange" 
                android:startColor="@color/bright_orange" />

            <stroke android:width="1sp" android:color="@color/orange" />

            <corners android:radius="10sp" />

            <padding android:bottom="10sp" android:left="20sp" android:right="20sp" 
                android:top="10sp" />
        </shape></item>
  
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/bright_orange" android:startColor="@color/orange" />

            <stroke android:width="1sp" android:color="@color/bright_orange" />

            <corners android:radius="10sp" />

            <padding android:bottom="10sp" android:left="20sp" android:right="20sp" android:top="10sp" />
        </shape></item>

    
    <item ><shape>
            <gradient android:startColor="@color/light_green"  android:endColor="@color/bright_orange"  android:angle="270"/>

            <stroke android:width="1sp" android:color="@color/bright_green" />

            <corners android:radius="10sp" />

            <padding android:bottom="10sp" android:left="20sp" android:right="20sp" android:top="10sp" />
        </shape></item>

</selector>