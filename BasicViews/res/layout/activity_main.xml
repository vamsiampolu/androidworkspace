<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button android:id="@+id/btn_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save"/>
    <Button android:id="@+id/btn_open"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:text="Open"/>

    <ImageButton
        android:id="@+id/btn_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <EditText android:id="@+id/edit01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="20sp"/>
    <CheckBox android:id="@+id/check01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="AutoSave"/>
    <CheckBox android:id="@+id/check02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/starStyle"
        />
    <RadioGroup android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rbg"
        >
        <RadioButton android:id="@+id/btn_radio1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Option 1"/>
        <RadioButton android:id="@+id/btn_radio2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Option 2"/>
            
        </RadioGroup>
        
    <ToggleButton  android:id="@+id/btn_toggle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
        
    
</LinearLayout>