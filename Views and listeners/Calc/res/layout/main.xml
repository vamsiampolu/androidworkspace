<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <EditText android:layout_width="fill_parent" android:text="" android:hint="" android:id="@+id/editText1" android:layout_height="wrap_content" android:gravity="center|right" android:numeric="decimal" android:digits="0123456789"></EditText>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/equal" android:layout_width="50dip" android:layout_height="wrap_content" android:text="@string/equal"></Button>
        <Button android:id="@+id/minus" android:layout_height="wrap_content" android:text="@string/minus" android:layout_width="50dip"></Button>
        <Button android:id="@+id/division" android:layout_height="wrap_content" android:text="@string/division" android:layout_width="50dip"></Button>
        <Button android:id="@+id/multiply" android:layout_height="wrap_content" android:text="@string/multiplication" android:layout_width="50dip" android:layout_gravity="right"></Button>
        <Button android:id="@+id/add" android:layout_width="50dip" android:layout_height="wrap_content" android:text="@string/plus"></Button>
    </LinearLayout>
    
</LinearLayout>
