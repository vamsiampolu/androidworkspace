<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center">
    <TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:text="Please Enter Login Information" android:paddingBottom="20dip" android:textSize="20dip" android:layout_width="fill_parent" android:gravity="center|center_vertical" android:paddingTop="10dip"></TextView>
    <EditText android:layout_height="wrap_content" android:id="@+id/editText1" android:text="" android:layout_width="fill_parent" android:hint="Enter Username" ></EditText>
    <EditText android:layout_height="wrap_content" android:password="true" android:id="@+id/editText2"  android:hint="Enter Password" android:layout_width="fill_parent"></EditText>
    <Button android:layout_height="wrap_content" android:width="100dip" android:layout_width="wrap_content" android:text="@string/btn_txt" android:id="@+id/button1" android:gravity="center" android:layout_gravity="center"></Button>
</LinearLayout>
