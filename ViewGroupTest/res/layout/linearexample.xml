<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
     >

    <Button android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Layout"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:layout_marginBottom="25sp"
        android:onClick="onClickLinearLayout"
        />
    
    <Button android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Layout"
        android:layout_gravity="center"
        android:layout_weight="0.25"
        android:layout_marginBottom="25sp"
        android:onClick="onClickTableLayout"
        />
    
    <Button android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative Layout"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:onClick="onClickRelativeLayout"
        />
    <Button android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0.75"
        android:text="ScrollView"
        android:onClick="onClickScrollView"
        />
    
    
        
</LinearLayout>